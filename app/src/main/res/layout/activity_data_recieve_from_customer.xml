<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomerFoodPanel.DataRecieveFromCustomerActivity">

    <ImageView
        android:id="@+id/top_img"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_marginTop="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/top_background" />

    <androidx.cardview.widget.CardView
        android:id="@+id/imgcard"
        android:layout_below="@id/top_img"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">

        <ImageView
            android:id="@+id/loadImageforOrder"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:paddingHorizontal="40dp"
            android:scaleType="centerCrop"
            android:src="@drawable/loadingcircle">
        </ImageView>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/dishcard"
        android:layout_below="@id/imgcard"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">


        <TextView
            android:id="@+id/Cartdishname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="Dish Name"
            android:textSize="35sp"
            android:textColor="@color/green"
            android:textStyle="bold">
        </TextView>



    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/itemcard"
        android:layout_below="@id/dishcard"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp">

        <TextView
            android:id="@+id/descriptiontxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:text="Discription"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/green">

        </TextView>

        <TextView
            android:id="@+id/Cartiscription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="50dp"
            android:text="discription"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/dark_green">
        </TextView>


        <TextView
            android:id="@+id/Pricetxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="80dp"
            android:text="Price"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/green">

        </TextView>

        <TextView
            android:id="@+id/CartPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="115dp"
            android:text="Price"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/dark_green">
        </TextView>



        <Button
            android:id="@+id/cartBtn"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Add to Cart"
            android:textSize="25sp"
            android:background="@drawable/btn_background"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginStart="30dp"
            android:layout_marginTop="165dp"
            android:elevation="5dp">

        </Button>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OR"
            android:textSize="18sp"
            android:background="@android:color/transparent"
            android:textColor="#36474F"
            android:textAlignment="center"
            android:layout_marginTop="212dp">

        </TextView>

        <Button
            android:id="@+id/confirmOrdeerBtn"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Place Order"
            android:textSize="25sp"
            android:background="@drawable/btn_background"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginStart="30dp"
            android:layout_marginTop="235dp"
            android:elevation="5dp">

        </Button>




    </androidx.cardview.widget.CardView>





</RelativeLayout>