<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/top_img"
        android:layout_width="wrap_content"
        android:layout_height="220dp"
        android:layout_marginTop="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/top_background" />

    <ImageView
        android:id="@+id/loginImage"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/login_img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp">

    </ImageView>


    <TextView
        android:id="@+id/hi_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hi,\nPlease Login \nAs User"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:textStyle="bold"
        android:layout_marginStart="18dp"
        android:layout_marginTop="25dp"
        android:fontFamily="sans-serif"
        >
    </TextView>


    <TextView
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textColor="#36474F"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginStart="30dp"
        android:layout_marginTop="380dp"
        android:fontFamily="sans-serif"

        >
    </TextView>

    <TextView
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textColor="#36474F"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginStart="30dp"
        android:layout_marginTop="480dp"
        android:fontFamily="sans-serif"

        >
    </TextView>



    <EditText
        android:id="@+id/enter_email"
        android:layout_below="@id/email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="7dp"
        android:textSize="18sp"
        android:padding="12dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:background="@drawable/edittext_background"
        />

    <EditText
        android:id="@+id/enter_pasword"
        android:layout_below="@id/password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="7dp"
        android:textSize="18sp"
        android:padding="12dp"
        android:paddingEnd="50dp"
        android:ems="10"
        android:inputType="textPassword"
        android:background="@drawable/edittext_background"
        />

    <ImageButton
        android:id="@+id/eyeToggleBtn"
        android:layout_below="@id/password"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:src="@drawable/hide"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        android:layout_marginStart="320dp">

    </ImageButton>


    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkboxIDForUser"
        android:layout_below="@+id/enter_pasword"
        android:text="Remember me"
        android:textColor="#36474F"
        android:textSize="17sp"
        android:fontFamily="sans-serif"
        android:layout_marginStart="30dp"
        android:layout_marginTop="5dp">

    </CheckBox>

    <TextView
        android:id="@+id/forgetIdForUser"
        android:layout_below="@id/enter_pasword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Forget Password"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:layout_marginStart="245dp"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        android:textColor="#36474F">

    </TextView>



    <Button
        android:id="@+id/loginBTn"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:layout_below="@id/enter_pasword"
        android:layout_marginStart="33dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/btn_background"
        android:text="Login"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"

        >


    </Button>

    <TextView
        android:id="@+id/dont_have_account"
        android:layout_below="@id/loginBTn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Don't have an account?"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textStyle="bold">

    </TextView>


    <Button
        android:id="@+id/signupBTnUser"
        android:layout_below="@id/loginBTn"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:text="Sign Up"
        android:textSize="20sp"
        android:textStyle="bold"
        android:onClick="press"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"
        android:layout_marginStart="33dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/btn_background"

        >

    </Button>





</RelativeLayout>