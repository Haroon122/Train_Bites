<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:background="@color/white">

    <androidx.cardview.widget.CardView
        android:layout_margin="5dp"
        android:layout_marginEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        app:cardCornerRadius="15dp"
        android:elevation="10dp"
        app:cardElevation="5dp">

        <TextView
            android:id="@+id/dateTextid"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Order Date:"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/green"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp">

        </TextView>

        <TextView
            android:id="@+id/Dateid"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="2024-11-05 14:35:20"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_marginTop="15dp"
            android:layout_marginStart="100dp">

        </TextView>


        <TextView
            android:id="@+id/order_no_text"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Order No:"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/green"
            android:layout_marginTop="35dp"
            android:layout_marginStart="10dp">

        </TextView>

        <TextView
            android:id="@+id/Pendingorder_id"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="1730877965463"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_marginTop="35dp"
            android:layout_marginStart="100dp">

        </TextView>

        <TextView
            android:id="@+id/name_text"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/green"
            android:layout_marginTop="55dp"
            android:layout_marginStart="10dp">

        </TextView>

        <TextView
            android:id="@+id/Ordername_id"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="name text"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_marginTop="55dp"
            android:layout_marginStart="100dp">

        </TextView>

        <TextView
            android:id="@+id/contact_no_text"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Contact No:"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/green"
            android:layout_marginTop="75dp"
            android:layout_marginStart="10dp">

        </TextView>

        <TextView
            android:id="@+id/Ordercontact_id"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="0300-9162707"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_marginTop="75dp"
            android:layout_marginStart="100dp">

        </TextView>


        <TextView
            android:id="@+id/seat_no_text"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="Seat No:"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/green"
            android:layout_marginTop="95dp"
            android:layout_marginStart="10dp">

        </TextView>

        <TextView
            android:id="@+id/Orderseat_id"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="99B"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_marginTop="95dp"
            android:layout_marginStart="100dp">

        </TextView>


        <TextView
            android:id="@+id/coach_text"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="Coach No:"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/green"
            android:layout_marginTop="115dp"
            android:layout_marginStart="10dp">

        </TextView>

        <TextView
            android:id="@+id/Ordercoach_id"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="111"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_marginTop="115dp"
            android:layout_marginStart="100dp">

        </TextView>


        <TextView
            android:id="@+id/Item_name_text"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Item Name:"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/green"
            android:layout_marginTop="155dp"
            android:layout_marginStart="10dp">

        </TextView>

        <ScrollView
            android:id="@+id/Orderitem_id"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginTop="155dp"
            android:layout_marginStart="100dp">

            <TextView
                android:id="@+id/itemTextView"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="15sp"
                android:textColor="@color/green"
                android:textAlignment="viewStart"
                android:scrollbars="vertical"
                android:lineSpacingExtra="5dp"
                />
        </ScrollView>

        <TextView
            android:id="@+id/amount_text"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="Amount:"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/green"
            android:layout_marginTop="135dp"
            android:layout_marginStart="10dp">

        </TextView>

        <TextView
            android:id="@+id/Orderamount_id"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Total Amount"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_marginTop="135dp"
            android:layout_marginStart="100dp">

        </TextView>

        <TextView
            android:id="@+id/paymentStatus_id"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Unpaid"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_marginTop="15dp"
            android:layout_marginStart="280dp">

        </TextView>

        <ImageButton
            android:id="@+id/delete_PendingOrder_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/delete_icon"
            android:layout_marginTop="140dp"
            android:layout_marginStart="300dp"
            android:background="@android:color/transparent">

        </ImageButton>


    </androidx.cardview.widget.CardView>




</RelativeLayout>